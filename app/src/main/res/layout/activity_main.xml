<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Who are you?"
            android:textColor="@android:color/black" android:textSize="30sp" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            android:layout_marginStart="19dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            android:layout_marginBottom="55dp" app:layout_constraintBottom_toTopOf="@+id/login"/>
    <ImageView
            android:layout_width="218dp"
            android:layout_height="0dp" app:srcCompat="@drawable/chat"
            android:id="@+id/imageView2"
            android:layout_marginTop="44dp"
            android:layout_marginBottom="21dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:id="@+id/login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:gravity="center"
            android:hint="Login"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="21sp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="62dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/setLogin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="49dp" android:layout_marginEnd="49dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Set login"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/setLogin"
            app:layout_constraintTop_toBottomOf="@+id/login" android:layout_marginBottom="145dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>